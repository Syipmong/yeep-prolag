}

// Mathematical function
fun calculateArea(width, height) {
    return width * height;
}

// Recursive function
fun factorial(n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

// Function with conditional logic
fun grade(score) {
    if (score >= 90) {
        return "A - Excellent!";
    } else if (score >= 80) {
        return "B - Good!";
    } else if (score >= 70) {
        return "C - Fair";
    } else {
        return "D - Needs improvement";
    }
}

