// Define a simple function
fun greet(name) {
    print "Hello, " + name + "!";
}

// Define a function with calculation
fun add(a, b) {
    return a + b;
}

// Define a factorial function (recursive)
fun factorial(n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

// Test basic function calls
print "=== Function Calls ===";
